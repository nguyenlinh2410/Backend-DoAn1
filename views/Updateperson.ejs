  <body>
    <h2 style="text-align: center">Edit Person</h2>
    <form
      class="create"
      action="/api/getUpdatePerson/<%=data.id %>"
      method="post"
    >
      <div class="it">
        <label for="">name: </label>
        <input type="text" name="name" value="<%=data.name %>" />
      </div>
      <div class="it">
        <label for="">age: </label>
        <input type="number" name="age" value="<%=data.age %>" />
      </div>

      <button class="btn" type="submit">Save</button>
    </form>
  </body>
